<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/preference_setting_camera_title" >

        <CheckBoxPreference
            android:key="preference_setting_mode"
            android:title="@string/preference_setting_mode_title" />

        <ListPreference
            android:defaultValue="60"
            android:dialogTitle="@string/preference_setting_timerperiod_title"
            android:entries="@array/preference_setting_timerperiod_entries"
            android:entryValues="@array/preference_setting_timerperiod_entryvalues"
            android:key="preference_setting_timerperiod"
            android:title="@string/preference_setting_timerperiod_title" />

        <ListPreference
            android:dialogTitle="@string/preference_setting_photo_size_title"
            android:key="preference_setting_photo_size"
            android:title="@string/preference_setting_photo_size_title" />

        <ListPreference
            android:dialogTitle="@string/preference_setting_photo_whitebalance_title"
            android:key="preference_setting_photo_whitebalance"
            android:title="@string/preference_setting_photo_whitebalance_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_setting_storage_title" >

        <EditTextPreference
            android:key="preference_setting_storage_path"
            android:title="@string/preference_setting_storage_path_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_setting_upload_ftp_title" >

        <CheckBoxPreference
            android:key="preference_setting_upload_ftp_enable"
            android:title="@string/preference_setting_upload_ftp_enable_title" />

        <EditTextPreference
            android:key="preference_setting_upload_ftp_domain"
            android:title="@string/preference_setting_upload_ftp_domain_title" />

        <EditTextPreference
            android:defaultValue="21"
            android:key="preference_setting_upload_ftp_port"
            android:title="@string/preference_setting_upload_ftp_port_title"
            android:inputType="number" />

        <EditTextPreference
            android:key="preference_setting_upload_ftp_login"
            android:title="@string/preference_setting_upload_ftp_login_title" />

        <EditTextPreference
            android:key="preference_setting_upload_ftp_password"
            android:title="@string/preference_setting_upload_ftp_password_title" 
            android:inputType="textPassword" />

        <EditTextPreference
            android:key="preference_setting_upload_ftp_remotepath"
            android:title="@string/preference_setting_upload_ftp_remotepath_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_setting_upload_ntp_title" >

        <CheckBoxPreference
            android:key="preference_setting_upload_ntp_enable"
            android:title="@string/preference_setting_upload_ntp_enable_title" />

        <EditTextPreference
            android:key="preference_setting_upload_ntp_domain"
            android:title="@string/preference_setting_upload_ntp_domain_title" />

        <EditTextPreference
            android:defaultValue="123"
            android:key="preference_setting_upload_ntp_port"
            android:title="@string/preference_setting_upload_ntp_port_title"
            android:inputType="number" />
    </PreferenceCategory>

</PreferenceScreen>